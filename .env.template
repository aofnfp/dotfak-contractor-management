# DotFak Contractor Management Platform - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================
# REQUIRED: Supabase Configuration
# ============================================================
# Get these from: https://supabase.com/dashboard/project/pcatbotfxeqrinydewen/settings/api

# Supabase Project URL
SUPABASE_URL=https://pcatbotfxeqrinydewen.supabase.co

# Supabase Anon Key (public, safe for frontend)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (PRIVATE, admin access, bypasses RLS)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT Secret (for token verification)
# Found in: Settings > API > JWT Settings > JWT Secret
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ============================================================
# REQUIRED: Database Configuration
# ============================================================
# Get this from: https://supabase.com/dashboard/project/pcatbotfxeqrinydewen/settings/database

# Direct PostgreSQL connection URL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.pcatbotfxeqrinydewen.supabase.co:5432/postgres

# ============================================================
# API Configuration
# ============================================================

# API Host (0.0.0.0 for production, localhost for development)
API_HOST=0.0.0.0

# API Port (8000 for local, $PORT for Docker/Coolify)
API_PORT=8000

# ============================================================
# Frontend Configuration
# ============================================================

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: https://dotfak-contractor-management.netlify.app
FRONTEND_URL=http://localhost:3000

# ============================================================
# Environment
# ============================================================

# Environment: development, staging, or production
ENVIRONMENT=development

# ============================================================
# For Production Deployment (Coolify/Docker):
# ============================================================
# Set API_PORT to: $PORT (Coolify provides this automatically)
# Set API_HOST to: 0.0.0.0
# Set ENVIRONMENT to: production
# Set FRONTEND_URL to: https://dotfak-contractor-management.netlify.app
